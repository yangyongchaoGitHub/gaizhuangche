<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="qrcodeInfoText">
        <item name="android:textColor">@color/bg_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.02</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="qrcodeInfoValueText">
        <item name="android:textColor">@color/bg_black</item>
        <item name="android:textSize">19dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.3</item>
        <item name="layout_constraintWidth_percent">0.7</item>
    </style>
</resources>
